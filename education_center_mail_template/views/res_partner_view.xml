<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <page name="sales_purchases" position="after">
                <page name="email-configuration" string='Emails configurations'>
                    <group colspan="4" >
                        <separator string="Photo header email" colspan="4" />
                        <field name="photo_header_email" widget="image" colspan="4" nolabel="1" />
                    </group>
                    <group colspan="4" col="10">
                        <group>
                            <separator string="Twitter icon" colspan="2"/>
                            <field name="twitter_icon" widget="image" colspan="2" nolabel="1" />
                            <separator string="Twitter user" colspan="2"/>
                            <field name="twitter_user" nolabel="1" />
                        </group>
                        <group>
                            <separator string="Facebook icon" colspan="2"/>
                            <field name="facebook_icon" widget="image" colspan="2" nolabel="1" />
                            <separator string="Facebook user" colspan="2"/>
                            <field name="facebook_user" nolabel="1" />
                        </group>
                        <group>
                            <separator string="Link 1 icon" colspan="2"/>
                            <field name="link1_icon" widget="image" colspan="2" nolabel="1" />
                            <separator string="Link 1 text" colspan="2"/>
                            <field name="link1_text" nolabel="1" />
                        </group>
                        <group>
                            <separator string="Link 2 icon" colspan="2"/>
                            <field name="link2_icon" widget="image" colspan="2" nolabel="1" />
                            <separator string="Link 2 text" colspan="2"/>
                            <field name="link2_text" nolabel="1" />
                        </group>
                        <group>
                            <separator string="Link 3 icon" colspan="2"/>
                            <field name="link3_icon" widget="image" colspan="2" nolabel="1" />
                            <separator string="Link 3 text" colspan="2"/>
                            <field name="link3_text" nolabel="1" />
                        </group>
                    </group>
                    <group colspan="4" >
                        <separator string="Footer text" colspan="4" />
                        <field name="footer_text" colspan="4" nolabel="1" />
                    </group>
                </page>
             </page>
        </field>
    </record>
</odoo>
